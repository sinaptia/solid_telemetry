<%= render "navigation" %>

<div class="space-y-10">
  <div class="">
    <h2 class="text-xl font-bold"><%= @performance_item.name %></h2>
    <%= render @performance_item %>
  </div>

  <div class="">
    <h2 class="text-xl font-bold"><%=t ".slowest_traces" %></h2>
    <%= render "solid_telemetry/spans/table", spans: @performance_item.spans.order(duration: :desc).page(1).per(5) %>
    <%= link_to t(".show_all"), spans_path(filter: { name: @performance_item.name }, sort: :duration, direction: :desc), class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  </div>
</div>
