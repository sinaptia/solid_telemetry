<% flash.each do |name, message| -%>
  <!-- notice colors: bg-green-50 bg-green-100 ring-offset-green-50 ring-green-600 text-green-500 text-green-800 -->
  <!-- notice colors: bg-red-50 bg-red-100 ring-offset-red-50 ring-red-600 text-red-500 text-red-800 -->
  <% message_color = { notice: "green", alert: "red" }[name.to_sym] %>

  <div class="rounded-md bg-<%= message_color %>-50 p-4">
    <div class="flex">
      <div class="shrink-0">
        <% if name == :notice %>
          <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
            <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495ZM10 5a.75.75 0 0 1 .75.75v3.5a.75.75 0 0 1-1.5 0v-3.5A.75.75 0 0 1 10 5Zm0 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
          </svg>
        <% end %>
    </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-<%= message_color %>-800"><%= message %></p>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" class="inline-flex rounded-md bg-<%= message_color %>-50 p-1.5 text-<%= message_color %>-500 hover:bg-<%= message_color %>-100 focus:outline-none focus:ring-2 focus:ring-<%= message_color %>-600 focus:ring-offset-2 focus:ring-offset-<%= message_color %>-50">
            <span class="sr-only">Dismiss</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path d="M6.28 5.22a.75.75 0 0 0-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06L10 11.06l3.72 3.72a.75.75 0 1 0 1.06-1.06L11.06 10l3.72-3.72a.75.75 0 0 0-1.06-1.06L10 8.94 6.28 5.22Z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end -%>
