<%= form_with scope: :filter, url: spans_path, method: :get, class: "mb-10" do |form| %>
  <%= form.select :name, SolidTelemetry::Span.roots.select(:name).order(:name).distinct.pluck(:name), {selected: params.dig(:filter, :name), include_blank: true}, class: "rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm/6" %>
  <%= form.datetime_field :start_at, value: params.dig(:filter, :start_at), class: "rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm/6" %>
  <%= form.datetime_field :end_at, value: params.dig(:filter, :end_at), class: "rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm/6" %>
  <%= form.button t(".filter"), class: "rounded-md bg-sky-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
<% end %>
